<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.josephmarrero.cantv.Fragments.SolicitudesFragment"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:background="#ffff"
            android:textColor="@color/colorPrimary"
            android:textSize="22dp"
            android:textStyle="bold"
            android:text="ESTATUS DE SERVICIOS"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="TELEFONO: "
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/statusTelefono"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="18dp"
                android:text="ESTATUS DE SERVICIO"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="INTERNET: "
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/statusInternet"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="18dp"
                android:text=" ESTATUS DE SERVICIO"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="PLAN DE INTERNET: "
                android:textSize="18dp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/planDeInternet"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="18dp"
                android:text=" ABA 10Mbps"/>
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:background="#ffff"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="ACTIVACION DE SERVICIOS"
            android:paddingTop="10dp"
            />

        <Switch
            android:id="@+id/switchTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACTIVAR TELEFONO"
            android:textSize="17dp"
            android:paddingTop="1dp"
            android:textColor="#000000"/>

        <Switch
            android:id="@+id/switchInternet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACTIVAR INTERNET"
            android:textSize="17dp"
            android:paddingTop="1dp"/>

        <Switch
            android:id="@+id/switchFirewall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FIREWALL"
            android:textSize="17dp"
            android:paddingTop="1dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:background="#ffff"
            android:textColor="@color/colorPrimary"
            android:textSize="22dp"
            android:textStyle="bold"
           android:layout_marginTop="10dp"
            android:text="CAMBIO DE PLAN INTERNET"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="ABA INTERNET: "
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>




    </LinearLayout>

</FrameLayout>
