<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.josephmarrero.cantv.Fragments.SolicitudesFragment"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFF">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:background="#ffff"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="PLANES LOCALES TELEFONIA FIJA"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="PLANES LOCALES: "
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <Spinner
                android:id="@+id/spinnerPlanesLocales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

        </LinearLayout>



        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:background="#ffff"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="ACTIVACION DE SERVICIOS"

            />

        <Switch
            android:id="@+id/switchIdentiLlamadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IDENTIFICADOR DE LLAMADAS"
            android:textSize="16dp"
            android:paddingTop="1dp"
            android:textColor="#000000"/>

        <Switch
            android:id="@+id/switchBloqueoNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BLOQUEO NUMERO '0' "
            android:textSize="16dp"
            android:paddingTop="1dp"
            android:textColor="#000000"/>


        <Switch
            android:id="@+id/switchBuzonDeMensajes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUZÃ“N DE MENSAJES"
            android:textSize="16dp"
            android:paddingTop="1dp"/>

        <Switch
            android:id="@+id/switchFirewall1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FIREWALL"
            android:textSize="16dp"
            android:paddingTop="1dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:background="#ffff"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold"
           android:layout_marginTop="10dp"
            android:text="CAMBIO DE PLAN INTERNET"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="ABA INTERNET: "
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:background="#ffff"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="SUSPENSION TEMPORAL Y RECONEXION"

            />

        <Switch
            android:id="@+id/switchTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TELEFONIA FIJA"
            android:textSize="16dp"
            android:paddingTop="1dp"
            android:textColor="#000000"/>

        <Switch
            android:id="@+id/switchInternet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INTERNET"
            android:textSize="16dp"
            android:paddingTop="1dp"
            android:textColor="#000000"/>


        <Switch
            android:id="@+id/switchTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TV SATELITAL"
            android:textSize="16dp"
            android:paddingTop="1dp"/>


    </LinearLayout>



</FrameLayout>
