<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bdbdbd"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.josephmarrero.cantv.Fragments.InfoFragment">


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardViewPago1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="#FFFF"
            card_view:cardCornerRadius="4dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:background="#ffff"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="INFORMACION DEL USUARIO"
                />
                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">


                        <TextView
                            android:id="@+id/NumeroDeCuenta"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="N°CUENTA :"
                            android:textSize="16dp"
                            android:background="#FFFF"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/Numero"
                            android:layout_width="fill_parent"
                            android:layout_height="25dp"
                            android:textSize="16dp"
                            android:text="NUMERO DE CUENTA"
                            android:background="#FFFFFF"
                            android:gravity="right"/>

                    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">


                <TextView
                    android:id="@+id/NombreUsuario"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:text="NOMBRE:"
                    android:layout_weight="3"
                    android:textSize="16dp"
                    android:background="#FFFF"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/nameid"
                    android:gravity="right"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:text="NOMBRE Y APELLIDO"
                    android:background="#FFFFFF"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">


                <TextView
                    android:id="@+id/cedula"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:text="CEDULA :"
                    android:layout_weight="3"
                    android:textSize="16dp"
                    android:background="#FFFF"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/cedulaid"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:layout_alignBottom="@+id/linearLayout"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:background="#FFFFFF"
                    android:text="NUMERO DE CEDULA"
                    android:gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">


                <TextView
                    android:id="@+id/TextTnumero"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="N°TELEFONO:"
                    android:textSize="16dp"
                    android:background="#FFFF"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/numeroTelefono"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:textSize="16dp"
                    android:layout_alignBottom="@+id/linearLayout"
                    android:layout_alignParentEnd="true"
                    android:background="#FFFFFF"
                    android:text=" NUMERO DE TELEFONO"
                    android:gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingTop="5dp">


                <TextView
                    android:id="@+id/Direccion"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="#FFFF"
                    android:text="DIRECCION:"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Adress"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/linearLayout"
                    android:layout_alignParentEnd="true"
                    android:background="#FFFFFF"
                    android:text=" DIRECCION"
                    android:textSize="16dp"
                    android:gravity="right"/>

            </LinearLayout>

            </LinearLayout>



        </android.support.v7.widget.CardView>




    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewStatusServicios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="#FFFF"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:background="#ffff"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="ESTADO DE SERVICIOS"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="TELEFONO: "
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/statusTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="right"
                    android:textSize="16dp"
                    android:text="ESTADO DE SERVICIOS"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="INTERNET: "
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/statusInternet"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="16dp"
                    android:gravity="right"
                    android:text=" ESTADO DE SERVICIOS"/>
            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="TVSATELITAL: "
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/statustvsatelital"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="16dp"
                android:gravity="right"
                android:text=" ESTADO DE SERVICIOS"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="PLAN DE INTERNET: "
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/planDeInternet"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="16dp"
                    android:text=" ABA 10Mbps"
                    android:gravity="right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="PLAN LOCAL: "
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textPlanLocal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text=" Plan local"
                    android:gravity="right"/>
            </LinearLayout>

            </LinearLayout>


    </android.support.v7.widget.CardView>

    <WebView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/webview"
        android:layout_marginTop="410dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />



</FrameLayout>

    </ScrollView>
